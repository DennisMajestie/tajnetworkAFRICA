{
    "colors": {
        "primary": {
            "dark": "#0f1419",
            "light": "#1a1f2e"
        },
        "accent": {
            "emerald": "#00d084",
            "gold": "#d4a574",
            "blue": "#0066ff",
            "purple": "#6f42c1"
        },
        "neutral": {
            "white": "#ffffff",
            "lightGray": "#f5f7fa",
            "mediumGray": "#d0d5dd",
            "darkGray": "#6b7280"
        }
    },
    "typography": {
