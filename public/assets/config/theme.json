            "heading": "Poppins, Inter",
            "body": "Inter, Segoe UI"
        },
        "sizes": {
            "h1": {
                "desktop": "3.5rem",
                "mobile": "2.5rem"
            },
            "h2": {
                "desktop": "2.5rem",
                "mobile": "1.875rem"
